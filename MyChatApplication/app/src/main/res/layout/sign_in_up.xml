<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.mychatapp.com.mychatapplication.SignInActivity">
        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_marginTop="60dp"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_login_logo" />

            <TextView
                android:id="@+id/test1"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:layout_gravity="center"
                android:text="Welcome Back To Fun" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/linehorizontal"
                android:layout_gravity="center"/>


        </LinearLayout>


<LinearLayout
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/email"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint=" Email "/>
        <EditText
            android:id="@+id/password"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/email"
            android:hint="Password"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/sign_in"
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:text="Sign In"
            android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
            />
        <Button
            android:id="@+id/sign_up"
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/sign_in"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:text="Sign Up"
            android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
            />

    </RelativeLayout>
<Button
    android:id="@+id/forget_password"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:text="Forget Your Password ?"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:paddingRight="10dp"
    android:background="@drawable/common_google_signin_btn_text_light_normal_background"
    />
</LinearLayout>

</LinearLayout>
